<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Toolbar" parent="AppTheme">
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="searchHintIcon">@null</item>
    </style>

    <style name="LoadingDialog" parent="AppTheme">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="ProgressColor" parent="AppTheme">
        <item name="colorAccent">@color/text_white</item>
    </style>

    <style name="TextSmall">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="TextMedium">
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="TextLarge">
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="TextExLarge">
        <item name="android:textSize">@dimen/text_size_ex_large</item>
    </style>

</resources>